<!DOCTYPE html>
<html lang="en">
  <head>

    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/add_new_student.css">

    <title><%= title %></title>
  </head>
  <body>

    <!-- PARTIAL FOR HEADER -->
    <%- include('_header') %>

    <% if (locals.user) {%>
      <div class="add-student">
      <h2>Enter Student Details</h2>
    
      <form action="/student/create" class="form-style" method="POST">
    
        <div class="form-control">
          <label for="name" class="form-label"></label>
          <input
            type="text"
            class="login-form-input"
            placeholder="Enter student name"
            id="name"
            name="name"
            required
          />
        </div>
    
        <div class="form-control">
          <label for="email" class="form-label"></label>
          <input
            type="text"
            class="login-form-input"
            placeholder="Enter student email"
            id="email"
            name="email"
            required
          />
        </div>
    
        <div class="form-control">
          <label for="college" class="form-label"></label>
          <input
            type="text"
            class="login-form-input"
            placeholder="Enter student college"
            id="college"
            name="college"
            required
          />
        </div>
    
        <div class="form-control">
            <label for="placement-status" class="form-label"></label>
            <input type="text" class="login-form-input" placeholder="Placement Status"/>
            <select id="placement-status" class="login-form-input" class="form-select"required name="placementStatus">
                <option selected>Not placed</option>
                <option>Placed</option>
            </select>
        </div>
    
        <div class="form-control">
            <label for="batch" class="form-label"></label>
            <input type="text" id="batch" class="login-form-input" placeholder="Enter batch no." name="batch" required/>
        </div>
    
        <div class="form-control">
          <label for="dsa-score" class="form-label"></label>
          <input type="number" class="login-form-input" id="dsa-score" name="dsa_score" placeholder="Enter DSA Score" required/>
        </div>
    
        
        <div class="form-control">
          <label for="webdev-score" class="form-label"></label>
          <input type="number" class="login-form-input" id="webdev-score" name="webdev_score" placeholder="Enter WebDev Score" required/>
        </div>
    
        
        <div class="form-control">
          <label for="react-score" class="form-label"></label>
          <input type="number" class="login-form-input" id="react-score" name="react_score" placeholder="Enter React Score" required/>
        </div>    
        
        <div>
          <button type="submit" class="login-button">Add Student</button>
        </div>
    
      </form>
    </div>
    </div>
    
    <%} %>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
