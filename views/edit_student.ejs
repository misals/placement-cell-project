<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/add_new_student.css">
    <title><%= title %></title>
  </head>

  <body>
    <!-- PARTIAL FOR HEADER -->
    <%- include('_header') %>

    <% if (locals.user) {%>
      <div class="add-student">
      <h2>Edit Student Details</h2>
    
      <form action="/student/update/<%= student_details.id %>" class="form-style" method="POST">
    
        <div class="form-control">
          <label for="name" class="form-label">Name : </label>
          <input
            type="text"
            class="login-form-input"
            placeholder="Enter student name"
            id="name"
            name="name"
            value=" <%= student_details.name %>"
            required
          />
        </div>
    
        <div class="form-control">
          <label for="college" class="form-label">College : </label>
          <input
            type="text"
            class="login-form-input"
            placeholder="Enter student college"
            id="college"
            name="college"
            value="<%= student_details.college %>"
            required
          />
        </div>
    
        <div class="form-control">
            <label for="placement-status" class="form-label">Placement :   </label>
            <select id="placement-status" class="form-select" required name="placementStatus">
                <option selected>Not placed</option>
                <option>Placed</option>
            </select>
        </div>
    
        <div class="form-control">
            <label for="batch" class="form-label">Batch : <label>
            <input type="text" class="login-form-input" id="batch" placeholder="Enter batch no." name="batch" value="<%= student_details.batch %>" required/>
        </div>
    
        <div class="form-control">
          <label for="dsa-score" class="form-label">DSA Score : </label>
          <input type="text" class="login-form-input" id="dsa-score" name="dsa_score" value="<%= student_details.dsa_score %>" required/>
        </div>
    
        
        <div class="form-control">
          <label for="webdev-score" class="form-label">WebDev Score : </label>
          <input type="text" class="login-form-input"  id="webdev-score" name="webdev_score" value="<%= student_details.webdev_score %>"required/>
        </div>
    
        
        <div class="form-control">
          <label for="react-score" class="form-label">React Score : </label>
          <input type="text" class="login-form-input" id="react-score" name="react_score" value="<%= student_details.react_score %>"required/>
        </div>    
        
        <div>
          <button type="submit" class="login-button" >Update</button>
        </div>
    
      </form>
    </div>
    </div>
    
    <%} %>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
